<p id="notice"><%= notice %></p>

<h1>
  <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
  <strong> <%= @cocktail.name %> </strong>



</h1>
<h2> Ingredients List </h2>
<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="cards">
    <% @cocktail.doses.each do |dose| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
            <%= dose.description %> <%= dose.ingredient.name %>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-remove-link' do %>
                <i class="fas fa-trash"></i>
                <% end %>
               <% end %>
          </div>
        </div>
    </div>
  </div>


<br>
<br>

</div>

<%= link_to "+ New Dose", new_cocktail_dose_path(@cocktail) %>
  <%= link_to 'Back', cocktails_path %>
